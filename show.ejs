        }
        .badge-pending {
            background-color: rgb(251, 191, 36);
            color: rgb(120, 53, 15);
        }
        .badge-verified {
            background-color: rgb(220, 252, 231);
            color: rgb(34, 197, 94);
        }
        .badge-cancelled {
            background-color: rgb(254, 226, 226);
            color: rgb(239, 68, 68);
        }
